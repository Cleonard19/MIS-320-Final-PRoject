@model Team4.Models.Product

@{
    ViewBag.Title = "Product - " + Model.Name;
}

<h2>@Model.Name</h2>
<h3>
<p class="button">
    @Html.ActionLink("Back to Menu", "Index",
        "Store")
    @*action link that redirects user back to home, index or store*@
</p></h3>
<p>
    <img alt="@Model.Name" src="@Model.ProductPicURL" height="250" width="250" />
</p>

<div id="album-details">

    
    <p>
        <em>Category:</em>
        @Model.Category.Name
    </p>
    <p>
        <em>Price:</em>
        @String.Format("{0:F}", Model.Price)
    </p>
    <p class="button">
        @Html.ActionLink("Add to cart", "AddToCart",
        "ShoppingCart", new { id = Model.ProductID}, "")
    </p>
</div>