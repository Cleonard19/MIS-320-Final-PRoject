

@model Team4.Models.Order
@{
    ViewBag.Title = "Address And Payment";
}
@* implement jquery scripts for address and payment functionality *@
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"
        type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"
        type="text/javascript"></script>
@* user input form *@
@using (Html.BeginForm())
{

    <h2>Address And Payment</h2>
    <fieldset>
        <legend>Delivery Information</legend>
        @Html.EditorForModel()
        <br />
        <br />
        <br />
    </fieldset>
    //field for promotion code to remove necessity for payment with given code
    <fieldset>

        <legend>Payment</legend>
        <p>
            Currently we are not accepting credit cards. All payments made via cash or Venmo when your driver arrives with your food!
        </p>
        <br />
        <br />
    </fieldset>
    //submit input for order confirmation to redirect to checkout complete
    <input type="submit" value="Submit Order" />
}